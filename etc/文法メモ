// イテレータのindexを取得
distance(a.begin(), it);

// lower_bound
// 指定した値以上の中の一番小さいイテレータを返す
auto it = lower_bound(all(a), x);

// unique
// vectorの重複を削除する　事前にソートが必要
a.erase(unique(all(a)), a.ed());

// priority_queue デフォルトは降順
// 昇順の場合:
priority_queue<int, vi, greater<int>> pq;

// set デフォルトは昇順
// 降順の場合:
set<int, greater<int>> s;

// ゼロ埋め関数 書式設定は保持される
string zerofill(int num, int digit) {
	ostringstream ss;
	ss << setw(digit) << setfill('0') << num;
	return ss.str();
}

// ラムダ式
// [キャプチャ変数](パラメータ変数)
auto f = [&a](int x) { };

// vector <-> set等の変換
// コンストラクタにイテレータを指定するだけ
vi a(all(s));
usi s(all(a));
